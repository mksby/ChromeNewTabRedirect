{
  "manifest_version": 3,
  "name": "Chrome New Tab Redirect",
  "version": "1.0",
  "description": "Redirects new tab to a custom URL",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_title": "Chrome New Tab Redirect"
  },
  "background": {
    "service_worker": "background.js"
  }
}
